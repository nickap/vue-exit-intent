{
  "name": "vue-exit-intent",
  "version": "2.2.1",
  "description": "Exit Intent Composable. Show your content when a user is leaving, or another threshold reached.",
  "author": "nickap <dev.texng@simplelogin.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "build-spa": "run-p type-check build-only-spa",
    "preview": "vite preview",
    "build-only": "vite build",
    "build-only-spa": "vite build --mode spa",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "vitest"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "optionalPeerDependencies": {
    "@vue/composition-api": "^1.0.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.7",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.25.0",
    "jsdom": "^24.0.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vitest": "^1.5.2",
    "vite-plugin-dts": "^3.9.0",
    "vue-tsc": "^2.0.14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickap/vue-exit-intent.git"
  },
  "keywords": [
    "exit",
    "intent",
    "vue",
    "use",
    "vueExitIntent",
    "composable",
    "mouse",
    "leave",
    "modal",
    "popup",
    "pop-up",
    "vue3"
  ],
  "bugs": {
    "url": "https://github.com/nickap/vue-exit-intent/issues"
  },
  "homepage": "https://github.com/nickap/vue-exit-intent#readme"
}
